#!/usr/sbin/env bash

function g3_config () {
  cat <<eof > ${1}
export GIT_HUB=${GIT_HUB}
export SVCROOT=/svc
eof
}

[ -z ${G3HOME} ] && export G3HOME=$(dirname ${0})
export GIT_HUB="https://github.com/galaxy3-net"
#export GIT_SSH_COMMAND="ssh -F ~/galaxy3/spicerack/.ssh/config"

export SVCROOT=${G3HOME}/svc/

ls ${G3HOME}/.g3 || mkdir ${G3HOME}/.g3
ls ${G3HOME}/.g3/config || create_g3config "${G3HOME}/.g3/config"

# env | egrep GIT_SSH_COMMAND

cat <<EOD

  G3HOME  -  ${G3HOME}
  GIT_HUB -  ${GIT_HUB}

EOD