#!/usr/bin/env bash

echo endor ${*}

cd ${HOME}/galaxy3/vagrant/endor

function state () {
  echo "Checking the state"
  return $(vagrant status --machine-readable | egrep 'default,state' | awk -F, '{print $4}')
}

function up () {
  if [ "$(state)" == "up" ]
  then
    echo ""${0} is already running"
    exit
  fi
  vagrant ${*}
}

case ${1} in
do
  up)  up
       ;;

   *)  usage ; exit 1
       ;;
done

