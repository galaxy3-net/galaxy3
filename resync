#!/usr/bin/env bash

functions=(
	g3disable
	g3enable
	g3resync
	g3status
	)

load_functions () {
  for function in ${functions[@]}
  do
  	  sudo curl -s -o /usr/local/bin/${function} https://raw.githubusercontent.com/galaxy3-net/galaxy3/thedr/functions/${function}?date=$(date +'%N')
      sudo chown root:root /usr/local/bin/${function}
      sudo chmod 0655 /usr/local/bin/${function}
  done
}

load_functions

# bash <(curl -s https://raw.githubusercontent.com/galaxy3-net/galaxy3/thedr/resync?date=$(date +'%N'))