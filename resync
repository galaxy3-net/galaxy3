#!/usr/bin/env bash

functions=(
	g3disable
	g3enable
	)

load_functions () {
  for function in ${functions[@]}
  do
  	  sudo curl -s -o /usr/local/bin/${function} https://raw.githubusercontent.com/galaxy3-net/galaxy3/master/functions/${function}
      sudo chown root:root /usr/local/bin/${function}
      sudo chmod 0600 /usr/local/bin/${function}
  done
}

load_functions

# bash <(curl --no-sessionid -s https://raw.githubusercontent.com/galaxy3-net/galaxy3/thedr/resync)