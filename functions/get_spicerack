#!/usr/bin/env bash


[ -n ${1} ] && export BRANCH=${1}

export GITPATH=${G3GITHUB}spicerack.git

ls -dl ${G3HOME}/spicerack 2>/dev/null || cd ${G3HOME} \
  && git clone ${GITPATH} \

ls -dl ${G3HOME}/spicerack 2>/dev/null \
  && cd ${G3HOME}/spicerack \
  && git checkout ${BRANCH:=thedr}

mkdir -p ~/.ssh
ls -dl ~/.ssh/config || echo 'Include ~/galaxy3/spicerack/.ssh/config.d/*' >> ~/.ssh/config

egrep 'Include ~/galaxy3/spicerack/.ssh/config.d/*' ~/.ssh/config \
  || echo 'Include ~/galaxy3/spicerack/.ssh/config.d/*' >> ~/.ssh/config