#!/usr/bin/env bash

cd /vagrant/functions

for file in $(ls)
do
  file /vagrant/functions/${file} | grep CRLF && dos2unix -n /vagrant/functions/${file} /usr/local/bin/${file}
  file /vagrant/functions/${file} | grep CRLF || cp /vagrant/functions/${file} /usr/local/bin/${file}
  chmod 0755 /usr/local/bin/${file}
  ls -adl /usr/local/bin/${file}
done

ls -adl /usr/local/bin